<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp">

    <TextView
        android:id="@+id/movie_item_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/movie_item_year"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/movie_item_name"
        android:textColor="#000"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/movie_item_vote_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/movie_item_year"
        android:textColor="#000"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/movie_item_vote_average"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/movie_item_vote_count"
        android:textColor="#000"
        android:textSize="12sp" />

</RelativeLayout>